                                                         Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                        </Polygon.Triggers>-->
                    </Polygon>
                </ToggleButton>
            </Border>

            <TextBlock Grid.Column="2"
                       Text="Философия"
                       FontSize="36"
                       TextTrimming="CharacterEllipsis" />
        </Grid>
        <Grid x:Name="content"
            Grid.Row="1"
              DataContext="{x:Static design:BookListDesignModel.Instance}"
              Visibility="Collapsed">
            <Border Padding="0,5,0, 0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">

                    <ItemsControl ItemsSource="{Binding Items}">

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <local:BookListItemControl HorizontalAlignment="Stretch" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel ItemWidth="350" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                    </ItemsControl>

                </ScrollViewer>
            </Border>
        </Grid>

    </Grid>
</UserControl>
