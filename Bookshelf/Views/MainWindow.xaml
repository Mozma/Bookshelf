<Window x:Class="Bookshelf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bookshelf" 
        xmlns:view="clr-namespace:Bookshelf.Views"
        xmlns:viewmodel="clr-namespace:Bookshelf.ViewModels"
        xmlns:customcontrols="clr-namespace:Bookshelf.CustomControls"
    mc:Ignorable="d"
        Title="MainWindow" 
        Height="780" 
        Width="1300"
        WindowStyle="None"       
        Background="Transparent"
        AllowsTransparency="True"
        MinHeight="{Binding Path=MinHeight, Mode=OneWay}"
        MinWidth="{Binding Path=MinWidth, Mode=OneWay}"
        x:Name="AppMainWindow"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource ModernWindowStyle}">


    <WindowChrome.WindowChrome>
        <WindowChrome ResizeBorderThickness="{Binding ResizeBorderThickness}"
                      CaptionHeight="{Binding TitleHeight}"
                      CornerRadius="0"
                      GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    
    <Border Background="{StaticResource BackgroundDarkGrayBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="2"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <Border
                Grid.Column="0"
                Background="{StaticResource BackgroundLightGrayBrush}"
                CornerRadius="10"
                BorderThickness="0"
                Padding="0,10,1,1">

                <StackPanel Grid.Column="0"
                            HorizontalAlignment="left"
                            Orientation="Vertical">

                    <customcontrols:SideBarMenuButton Icon="{StaticResource HomeIcon}" 
                                                      ButtonContent="Home"
                                                      Command="{Binding HomeViewCommand}"/>
                    <customcontrols:SideBarMenuButton Icon="{StaticResource NoteIcon}" 
                                                      ButtonContent="Note"
                                                      Command="{Binding NotesViewCommand}"/>
                    <customcontrols:SideBarMenuButton Icon="{StaticResource ShelfIcon}" 
                                                      ButtonContent="Shelf"
                                                      Command="{Binding ShelfsViewCommand}"/>
                    
                </StackPanel>
            </Border>

            <Border 
                Grid.Column="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                CornerRadius="10"
                BorderThickness="0"
                Padding="5">


                <ContentControl  Content="{Binding CurrentViewModel}"/>

                <!--<Grid>
                    <StackPanel HorizontalAlignment="Left" >
                        <customcontrols:BookListItem Width="400"/>
                        <customcontrols:BookListItem Width="400"/>
                        <customcontrols:BookListItem Width="400"/>
                        <customcontrols:BookListItem Width="400"/>


                    </StackPanel>
                    
                    
                </Grid>-->
            </Border>
            
        </Grid>
    </Border>
</Window>
